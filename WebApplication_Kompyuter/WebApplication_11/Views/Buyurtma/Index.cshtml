            @Html.DisplayFor(modelItem => item.Yigish.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Holati)
        </td>
        <td>
            @Html.ActionLink("O'zgartirish", "Edit", new { id = item.Id }) |
@Html.ActionLink("Ma'lumotlar", "Details", new { id = item.Id }) |
@Html.ActionLink("O'chirish", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
