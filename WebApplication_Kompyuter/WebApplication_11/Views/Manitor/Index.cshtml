@model PagedList.IPagedList<WebApplication_11.Models.Manitor>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


@{
    ViewBag.Title = "Index";
}

<h2 style="text-align-last:center">Monitorlar</h2>

<p>
    @Html.ActionLink("Yangi qo'shish", "Create")
</p>
<table class="table">
    <tr>
        <th><b>Kompaniya nomi</b></th>
        <th><b>Manitor nomi</b></th>
        <th><b>Narxi</b></th>
        <th><b>Rasmi</b></th>
        <th><b>Ma'lumoti</b></th>


    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kompaniya.Nomi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nomi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Narxi)
        </td>
        <td>
            <img src="/Image/@item.Mon_rasm" width="100" height="100" alt="rasm" />

            @*@Html.DisplayFor(modelItem => item.Mon_rasm)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Malumot)
        </td>
        <td>
            @Html.ActionLink("O'zgartirish", "Edit", new { id = item.Id }) |
@Html.ActionLink("Ma'lumotlar", "Details", new { id = item.Id }) |
@Html.ActionLink("O'chirish", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
