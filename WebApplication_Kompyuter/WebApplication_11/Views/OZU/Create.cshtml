@model WebApplication_11.Models.OZU

@{
    ViewBag.Title = "Create";
}

<h2>Yangi qo'shish</h2>


@using (Html.BeginForm("Create", "OZU", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>OZU</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Xajmi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Xajmi)
                @Html.ValidationMessageFor(model => model.Xajmi)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Narxi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Narxi)
                @Html.ValidationMessageFor(model => model.Narxi)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KompaniyaId, "KompaniyaId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KompaniyaId", String.Empty)
                @Html.ValidationMessageFor(model => model.KompaniyaId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OZU_rasm, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="Imagefile" value="hd" required />

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Orqaga qaytish", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
