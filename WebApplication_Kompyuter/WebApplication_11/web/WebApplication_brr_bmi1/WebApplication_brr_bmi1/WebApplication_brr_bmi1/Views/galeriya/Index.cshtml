                            <h5 class="card-title">Narxi: @x.Narxi</h5>
                            <p class="card-text">Viloyat: @x.Uy.Tuman.Viloyat.Viloyat_nomi    </p>
                            <p class="card-text">Tuman: @x.Uy.Tuman.Tuman_nomi   </p>

                            <p class="card-text">Manzil: @x.Uy.Manzil    </p>
                            <p class="card-text">@x.Nechnchi_qavat - qavat honalar soni: @x.Xonalar_soni ta   </p>

                            <a href="/galeriya/Buy" class="btn btn-primary">Sotib Olish</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</section>

