<section class="bannerbottom py-lg-5 py-md-4 py-md-3 py-2">
    <div class="bannerbottom py-lg-5 py-md-4 py-md-3 py-2">
        <div class="container">
            <div class="row">
                @foreach(Xonadon x in Model.Xonadon)
                { 
              
                <div class="col-md-4 col-sm-12 w3_ban">
                    <div class="card">
                        <img class="card-img-top" src="/Image/@x.Malumot" width="200" height="300" alt="Card image cap">
